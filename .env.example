APP_NAME=ShortSight
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
SESSION_DRIVER=file
SESSION_LIFETIME=120

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Custom Configuration
ENABLE_URL_LENGTH_CHECK=true
MAX_URL_LENGTH=2048
ENABLE_UNICODE_CHECK=true
BLOCK_PRIVATE_IPS=true
BLOCK_LOCALHOST=true

ENABLE_CONTENT_TYPE_CHECK=true
ENABLE_PATTERN_DETECTION=true
ENABLE_DOMAIN_BLACKLIST=true
ENABLE_GOOGLE_SAFE_BROWSING=true

URL_VALIDATION_CACHE_TTL=86400
URL_CONTENT_CHECK_TIMEOUT=5

# reCAPTCHA
RECAPTCHA_SITE_KEY=your_site_key_here
RECAPTCHA_SECRET_KEY=your_secret_key_here
RECAPTCHA_SCORE_THRESHOLD=0.5
